{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Ultracite",
  "colors": {
    "primary": "#4F46E5",
    "light": "#6159E8",
    "dark": "#473FCE"
  },
  "favicon": "/favicon.svg",
  "fonts": {
    "family": "Geist"
  },
  "background": {
    "decoration": "windows"
  },
  "navigation": {
    "groups": [
      {
        "group": "Getting Started",
        "pages": ["index", "setup", "usage", "configuration", "troubleshooting"]
      },
      {
        "group": "Cloud",
        "pages": ["cloud"]
      },
      {
        "group": "Providers",
        "pages": ["provider/biome", "provider/eslint", "provider/oxlint"]
      },
      {
        "group": "AI Integration",
        "pages": ["rules", "hooks", "mcp-server"]
      },
      {
        "group": "Migrations",
        "pages": [
          "migrate/biome",
          "migrate/eslint",
          "migrate/oxlint",
          "migrate/prettier",
          "migrate/stylelint"
        ]
      },
      {
        "group": "Upgrade Guides",
        "pages": ["upgrade/v7", "upgrade/v6", "upgrade/v5"]
      },
      {
        "group": "Other",
        "pages": ["git-hooks", "monorepos", "faq", "sponsors"]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "GitHub",
          "href": "https://github.com/haydenbleasel/ultracite",
          "icon": "github"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://app.ultracite.ai"
    },
    "links": [
      {
        "label": "Home",
        "href": "https://ultracite.ai"
      },
      {
        "label": "Docs",
        "href": "/"
      }
    ]
  },
  "footer": {
    "socials": {
      "github": "https://github.com/haydenbleasel/ultracite"
    }
  }
}
