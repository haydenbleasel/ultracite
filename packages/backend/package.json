{
  "name": "@repo/backend",
  "description": "Supabase and database backend for Ultracite",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./database": "./src/database/index.ts",
    "./supabase/client": "./src/supabase/client.ts"
  },
  "scripts": {
    "dev": "supabase start",
    "stop": "supabase stop",
    "generate": "prisma generate --no-hints",
    "migrate": "prisma format && prisma generate && prisma db push",
    "gen-types": "supabase gen types typescript --local > database.types.ts"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "@prisma/client-runtime-utils": "^7.2.0",
    "@supabase/ssr": "^0.8.0",
    "@supabase/supabase-js": "^2.89.0"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "dotenv": "^17.2.3",
    "prisma": "^7.2.0",
    "supabase": "^2.70.5",
    "typescript": "^5.9.3"
  }
}
