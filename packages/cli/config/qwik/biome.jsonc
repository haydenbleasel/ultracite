{
	"root": false,
	"$schema": "../../node_modules/@biomejs/biome/configuration_schema.json",
	"linter": {
		"rules": {
			"nursery": {
				"useQwikValidLexicalScope": "error",
				"useQwikMethodUsage": "error"
			},
			"style": {
				"noMagicNumbers": "off"
			},
			"suspicious": {
				"noConsole": "off",
				"noReactSpecificProps": "error"
			},
			"correctness": {
				"noQwikUseVisibleTask": "error",
				"useQwikClasslist": "error"
			}
		}
	}
}
