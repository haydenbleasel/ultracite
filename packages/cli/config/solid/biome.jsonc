{
	"root": false,
	"$schema": "../../node_modules/@biomejs/biome/configuration_schema.json",
	"linter": {
		"rules": {
			"correctness": {
				"noSolidDestructuredProps": "error"
			},
			"performance": {
				"useSolidForComponent": "error"
			},
			"style": {
				"noMagicNumbers": "off"
			},
			"suspicious": {
				"noConsole": "off",
				"noReactSpecificProps": "error"
			}
		}
	}
}
