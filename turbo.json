{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "envMode": "loose",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env.local", ".env.*.local"],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "dist/**",
        "src/database/generated/**"
      ]
    },
    "transit": {
      "dependsOn": ["^transit"]
    },
    "test": {
      "dependsOn": ["transit"]
    },
    "test:coverage": {
      "dependsOn": ["transit"]
    },
    "lint": {
      "dependsOn": ["transit"]
    },
    "check-types": {
      "dependsOn": ["transit"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
