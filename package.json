{
  "name": "ultracite-monorepo",
  "description": "The AI-ready formatter that helps you write and generate code faster.",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "test": "turbo test",
    "test:coverage": "turbo test:coverage",
    "check": "npx ultracite@latest check",
    "fix": "npx ultracite@latest fix",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "pnpm build && changeset publish",
    "bump-deps": "npx npm-check-updates --deep -u -x react-day-picker,recharts && pnpm install"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.6",
    "@changesets/cli": "^2.29.7",
    "@types/node": "^24.9.0",
    "@vitest/coverage-v8": "3.2.4",
    "turbo": "^2.5.8"
  },
  "dependencies": {
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@10.18.3"
}
