{
  "name": "ultracite-monorepo",
  "description": "The AI-ready formatter that helps you write and generate code faster.",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "test": "turbo test",
    "test:coverage": "turbo test:coverage",
    "check": "npx ultracite@latest check",
    "fix": "npx ultracite@latest fix",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "bun build && changeset publish",
    "bump-deps": "npx npm-check-updates --deep -u -x recharts && bun install",
    "bump-ui": "cd apps/docs && npx shadcn@latest add --all --overwrite && npx shadcn@latest migrate radix"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.7",
    "@changesets/cli": "^2.29.7",
    "@types/node": "^24.10.1",
    "turbo": "^2.6.1",
    "typescript": "^5.9.3"
  },
  "packageManager": "bun@1.3.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
