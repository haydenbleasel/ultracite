{
  "name": "ultracite-monorepo",
  "description": "The AI-ready formatter that helps you write and generate code faster.",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "test": "turbo test",
    "test:coverage": "turbo test:coverage",
    "check": "npx @biomejs/biome check",
    "fix": "npx @biomejs/biome check --write",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "bun build && changeset publish",
    "bump-deps": "npx npm-check-updates --deep -u -x \"recharts,react-resizable-panels\" && bun install",
    "bump-ui": "cd apps/docs && npx shadcn@latest add --all --overwrite && npx shadcn@latest migrate radix"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@changesets/cli": "^2.29.8",
    "@types/node": "^25.0.3",
    "concurrently": "^9.2.1",
    "turbo": "^2.7.2",
    "typescript": "^5.9.3"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
